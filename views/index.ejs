    <div class="container">
        <div id="login">
            <div id="owl-login">
                <div class="hand"></div>
                <div class="hand hand-r"></div>
                <div class="arms">
                    <div class="arm"></div>
                    <div class="arm arm-r"></div>
                </div>
            </div>
        </div>

        <form class="form-horizontal" action="/login" method="post" accept-charset="utf-8">
            <p class="text-center" style="font-size:22px;">Login</p>
            <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">账号:</label>
                <div class="col-sm-10">
                    <input type="text" name="account" class="form-control" id="inputEmail3" placeholder="请输入您的账号......">
                </div>
            </div>
            <div class="form-group">
                <label for="inputPassword3" class="col-sm-2 control-label">密码:</label>
                <div class="col-sm-10">
                    <input type="password" name="password" class="form-control" id="user_pass" placeholder="请输入您的密码......">
                </div>
            </div>
            <!-- <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <div class="checkbox">
                        <label>
          					<input type="checkbox"> Remember me
        				</label>
                    </div>
                </div>
            </div> -->
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default pull-right clearfix">登录</button>
                </div>
            </div>
        </form>

    </div>
    <!-- /container -->
    <script src="https://cdn.bootcss.com/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://cdn.bootcss.com/layer/3.1.0/layer.js"></script>
    <script>
        $(function() {

            $('#user_pass').focus(function() {
                $('#owl-login').addClass('password');
            }).blur(function() {
                $('#owl-login').removeClass('password');
            });
        });
    </script>
    <script>
        if (GetQueryString("msg")) {
            // alert(GetQueryString("msg"))
            layer.msg(GetQueryString("msg"), {
                time: 1000,
                icon: 2
            });
        }

        function GetQueryString(name) {
            var reg = new RegExp("(^|&)" + name + "=([^&]*)(&|$)");
            var r = window.location.search.substr(1).match(reg);
            if (r != null) return unescape(r[2]);
            return null;
        }
    </script>

</body>

</html>